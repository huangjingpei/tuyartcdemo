<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="192dp"
    android:layout_height="108dp"
    android:background="@color/black"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/muteAudio_chkbox"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/muteAudio_tv"
        android:text="禁止音频"
        android:textSize="8sp"

        android:visibility="visible"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/muteAudio_chkbox"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        />
    <CheckBox
        android:id="@+id/muteVideo_chkbox"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/muteAudio_tv"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/muteVideo_tv"
        android:text="禁止视频"
        android:textSize="8sp"

        android:visibility="visible"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/muteVideo_chkbox"
        android:layout_marginTop="10dp"
        />


    <!--    <Button-->
    <!--        android:id="@+id/callDetails_btn"-->
    <!--        android:text="详情"-->
    <!--        android:textSize="8sp"-->
    <!--        android:layout_width="48dp"-->
    <!--        android:layout_height="30dp"-->
    <!--        android:layout_alignParentLeft="true"-->
    <!--        android:layout_alignParentBottom="true"-->

    <!--        />-->
    <TextView
        android:id="@+id/streamName_tv"
        android:text="流名"
        android:textSize="8sp"
        android:gravity="left|center"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>